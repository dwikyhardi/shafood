<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lengkapidata_kurir">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- Text View LENGKAPI DATA -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="40dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="LENGKAPI DATA"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                tools:layout_editor_absoluteX="1176dp"
                tools:layout_editor_absoluteY="655dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="30dp">

                    <!-- Icon Nama -->
                    <ImageView
                        android:id="@+id/imgView_namaIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/baseline_mail_outline_black_18"
                        android:tint="@color/white" />

                    <!-- Edit Text Nama -->
                    <EditText
                        android:id="@+id/EditTextnama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgView_namaIcon"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imgView_namaIcon"
                        android:background="@color/editTextBG"
                        android:hint="Nama Lengkap"
                        android:paddingLeft="20dp"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp">

                    <!-- Icon Alamat -->
                    <ImageView
                        android:id="@+id/imgView_alamatIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/baseline_mail_outline_black_18"
                        android:tint="@color/white" />

                    <!-- Edit Text Alamat -->
                    <EditText
                        android:id="@+id/EditTextalamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgView_alamatIcon"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imgView_alamatIcon"
                        android:background="@color/editTextBG"
                        android:hint="Alamat Lengkap"
                        android:paddingLeft="20dp"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp">

                    <!-- Icon No Telepon -->
                    <ImageView
                        android:id="@+id/imgView_nohpIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/baseline_mail_outline_black_18"
                        android:tint="@color/white" />

                    <!-- Edit Text No Telepon -->
                    <EditText
                        android:id="@+id/EditTextnohp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgView_nohpIcon"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imgView_nohpIcon"
                        android:background="@color/editTextBG"
                        android:hint="No.HandPhone"
                        android:inputType="phone"
                        android:paddingLeft="20dp"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp">

                    <!-- Icon Tanggallahir -->
                    <ImageView
                        android:id="@+id/imgView_dateIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/baseline_mail_outline_black_18"
                        android:tint="@color/white" />

                    <!-- Edit Text Tanggal Lahir -->
                    <EditText
                        android:id="@+id/EditTexttanggallahir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgView_dateIcon"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imgView_dateIcon"
                        android:background="@color/editTextBG"
                        android:hint="30-12-1999"
                        android:inputType="date"
                        android:paddingLeft="20dp"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp">

                    <!-- Icon No Plat -->
                    <ImageView
                        android:id="@+id/imgView_noplatIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@drawable/baseline_mail_outline_black_18"
                        android:tint="@color/white" />

                    <!-- Edit Text No Plat -->
                    <EditText
                        android:id="@+id/EditTextNoPlat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imgView_noplatIcon"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imgView_noplatIcon"
                        android:background="@color/editTextBG"
                        android:hint="Plat Nomor"

                        android:paddingLeft="20dp"
                        android:textSize="15sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/btnChooseIdentitas"
                        android:text="Ambil Foto Diri Sendiri"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgViewIdentitas"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp" />

                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btnChooseSTNK"
                    android:text="Ambil Foto STNK "
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">

                    <ImageView
                        android:id="@+id/imgViewSTNK"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/btnChooseSIM"
                        android:text="Ambil Foto SIM "
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">

                    <ImageView
                        android:id="@+id/imgViewSIM"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp" />

                </LinearLayout>

                <!-- Button Upload -->
                <Button
                    android:id="@+id/tambahKurir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chkBox1"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:text="UPLOAD"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>